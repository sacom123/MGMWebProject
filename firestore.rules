rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public read access for most collections
    match /branches/{branchId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    match /news/{newsId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    match /faqs/{faqId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // Franchise applications - anyone can create, only admins can read/update
    match /franchiseApplications/{appId} {
      allow create: if request.resource.data.agreePrivacy == true;
      allow read, update: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    // SEO metadata
    match /seo/{route} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
